@model IEnumerable<NurayMarhanPortalGroup.Entities.Entities.Address>

@{
    ViewData["Title"] = "GetAllAddress";
}

<h4>Tüm Adresler</h4>
<hr />


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Adres Satırı
            </th>
            <th>
                Ülke
            </th>
            <th>
                Şehir
            </th>
            <th>
                Semt
            </th>
            <th>
                Posta Kodu
            </th>
            <th>
                Müşteri Kodu
            </th>

            <th>
                Durum
            </th>

            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.District)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    @Html.ActionLink("Güncelle", "UpdateAddress", new { id = item.ID }) |
                    @Html.ActionLink("Sil", "DeleteAddress", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-info m-1" asp-controller="Address" asp-action="Index">Adres Ekle</a>

